<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "Listar")}", cad_patrimonios_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "Novo")}", new_cad_patrimonio_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "")  %>
    	
    	</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          
                    <th>
            <%= t("activerecord.attributes.cad_patrimonio.descricao", :default => t("activerecord.labels.nomeprod", :default => "Descrição")) %>
          </th>
                    <th><%= t("web-app-theme.cliente", :default => "Cliente")  %></th>
                    
                    <th><%= t("web-app-theme.tipo_contrato", :default => "Tipo Contrato")  %></th>
                    
          <th class="last">&nbsp;</th>
        </tr>
        <% @cad_patrimonios.each do |cad_patrimonio| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= link_to cad_patrimonio.descricao, cad_patrimonio_path(cad_patrimonio) %>
          </td>
          
          <td>
            <%= cad_patrimonio.cliente %>
          </td>          
           <td>
            <%= cad_patrimonio.tipo_contrato %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Visualizar")}", cad_patrimonio_path(cad_patrimonio) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Editar")}", edit_cad_patrimonio_path(cad_patrimonio) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", cad_patrimonio_path(cad_patrimonio), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Você tem certeza?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>

