<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "Listar")}", cadprods_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "Novo")}", new_cadprod_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Visualizar")}", cadprod_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.cadprod.nomeprod", :default => t("activerecord.labels.nomeprod", :default => "Produto")) %>:</b>
          <%= @cadprod.nomeprod %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.cadprod.quantprod", :default => t("activerecord.labels.quantprod", :default => "Quant")) %>:</b>
          <%= @cadprod.quantprod %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.cadprod.valunit", :default => t("activerecord.labels.valunit", :default => "Val. unit")) %>:</b>
          <%= @cadprod.valunit %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.cadprod.total", :default => t("activerecord.labels.total", :default => "Total")) %>:</b>
          <%= @cadprod.total %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Editar")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_cadprod_path(@cadprod), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), cadprod_path(@cadprod), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>