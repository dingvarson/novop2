<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "Listar")}", cadprods_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "Novo")}", new_cadprod_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "")  %> Listagem de Produtos</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.cadprod.nomeprod", :default => t("activerecord.labels.nomeprod", :default => "Produto")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Criado em")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @cadprods.each do |cadprod| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= cadprod.id %>
          </td>
                    <td>
            <%= link_to cadprod.nomeprod, cadprod_path(cadprod) %>
          </td>
                    <td>
            <%= cadprod.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Visualizar")}", cadprod_path(cadprod) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Editar")}", edit_cadprod_path(cadprod) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", cadprod_path(cadprod), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
