<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "Listar")}", cta_pagars_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "Novo")}", new_cta_pagar_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", cta_pagar_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.cta_pagar.descricao", :default => t("activerecord.labels.descricao", :default => "Descricao")) %>:</b>
          <%= @cta_pagar.descricao %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.cta_pagar.nomeforn", :default => t("activerecord.labels.nomeforn", :default => "Nomeforn")) %>:</b>
          <%= @cta_pagar.nomeforn %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.cta_pagar.datavencto", :default => t("activerecord.labels.datavencto", :default => "Datavencto")) %>:</b>
          <%= @cta_pagar.datavencto %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.cta_pagar.valor", :default => t("activerecord.labels.valor", :default => "Valor")) %>:</b>
          <%= @cta_pagar.valor %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Editar")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_cta_pagar_path(@cta_pagar), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), cta_pagar_path(@cta_pagar), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>