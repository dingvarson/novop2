<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "Listar")}", cta_pagars_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "Novo")}", new_cta_pagar_path %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "Consulta por Data")}", consuldata_cta_pagars_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "")  %>
    <form accept-charset="UTF-8" action="/cta_pagars/consuldata	" method="get">
  <label>Informe o Periodo: 
    <input type="date" name="data1" OnKeyUp="this.style.textTransform='uppercase'" id="" />
       <input type="date" name="data2" OnKeyUp="this.style.textTransform='uppercase'" id="" />
  
  <select name="combo">
    <option name="box1" value="Á PAGAR">Á PAGAR</option>
    <option name="box2" value="PAGA">PAGA</option>
    
</select>
  </label>
   
  <label>
    <input type="submit" name="" id="" value="Consultar" />
    
  </label>
 </h2>   
    
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.ordem.nome_cli", :default => t("activerecord.labels.Nome", :default => "Nome Cliente")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Data Cadastro")  %></th>
                    
                     <th><%= t("web-app-theme.valor", :default => "Valor")  %></th>
                     
                      <th><%= t("web-app-theme.valor", :default => "Status")  %></th>
                     
                     <th class="last">&nbsp;</th>
        </tr>
        
        <% if @cta_pagars.blank? then %>
      
         <h2>Não Foram Encontrados Registros </h2>
          <% else %>
        
        <% @cta_pagars.each do |cta_pagar| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= cta_pagar.id %>
          </td>
                    <td>
            <%= link_to cta_pagar.nomeforn, cta_pagar_path(cta_pagar) %>
          </td>
                    <td>
            <%= cta_pagar.created_at.strftime("%d/%m/%Y") %>
          </td>
          
          <td>
            <%= cta_pagar.valor %>
          </td>
          
           <td>
            <%= cta_pagar.status %>
          </td>
          
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", cta_pagar_path(cta_pagar) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_cta_pagar_path(cta_pagar) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", cta_pagar_path(cta_pagar), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Você tem certeza?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
         
            
        Total Geral R$<%= @somatoria %>
      
        
      </div>
     
    </div>
  </div>
</div>

 

<% content_for :sidebar, render(:partial => 'cadclis/sidebar') -%>


 <% end %> 










